{
	"name": "clean-nest",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"libs/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"prepare": "husky",
		"seed": "ts-node -r tsconfig-paths/register prisma/seed/index.ts",
		"seed:file": "ts-node -r tsconfig-paths/register prisma/seed/$FILE.ts",
		"dev": "NODE_OPTIONS='-r tsconfig-paths/register' nest start --watch"
	},
	"dependencies": {
		"@fastify/multipart": "^9.3.0",
		"@fastify/static": "^8.3.0",
		"@nestjs-modules/mailer": "^2.0.2",
		"@nestjs/bullmq": "^11.0.4",
		"@nestjs/cache-manager": "^3.0.1",
		"@nestjs/common": "^11.1.10",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.10",
		"@nestjs/jwt": "^11.0.2",
		"@nestjs/mapped-types": "^2.1.0",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-fastify": "^11.1.10",
		"@nestjs/serve-static": "^5.0.4",
		"@nestjs/swagger": "^11.2.3",
		"@nestjs/terminus": "^11.0.0",
		"@nestjs/throttler": "^6.5.0",
		"@prisma/adapter-libsql": "^7.2.0",
		"@prisma/adapter-pg": "^7.2.0",
		"@prisma/client": "^7.2.0",
		"@scalar/nestjs-api-reference": "^1.0.13",
		"bcryptjs": "^3.0.3",
		"bullmq": "^5.66.2",
		"cache-manager": "^7.2.7",
		"cache-manager-ioredis-yet": "^2.1.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.3",
		"crypto-js": "^4.2.0",
		"dayjs": "^1.11.19",
		"fastify": "^5.6.2",
		"handlebars": "^4.7.8",
		"ioredis": "^5.8.2",
		"nodemailer": "^7.0.11",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"pg": "^8.16.3",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.3",
		"@eslint/js": "^9.39.2",
		"@nestjs/cli": "^11.0.14",
		"@nestjs/schematics": "^11.0.9",
		"@nestjs/testing": "^11.1.10",
		"@types/handlebars": "^4.1.0",
		"@types/jest": "^30.0.0",
		"@types/multer": "^2.0.0",
		"@types/node": "^22.19.3",
		"@types/nodemailer": "^7.0.4",
		"@types/passport-local": "^1.0.38",
		"@types/pg": "^8.16.0",
		"@types/supertest": "^6.0.3",
		"dotenv": "^17.2.3",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"prettier": "^3.7.4",
		"prisma": "^7.2.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.6",
		"ts-loader": "^9.5.4",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/src/",
			"<rootDir>/libs/"
		],
		"moduleNameMapper": {
			"^@common(|/.*)$": "<rootDir>/libs/common/src/$1",
			"^@repositories/repositories(|/.*)$": "<rootDir>/libs/repositories/src/$1",
			"^@utils(|/.*)$": "<rootDir>/libs/utils/src/$1"
		}
	}
}
